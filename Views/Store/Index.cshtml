@model IEnumerable<BookStore.Models.Book>

@{
    ViewData["Title"] = "Store";
}
<style>
    .breadcrumbs-area {
        background: rgba(0, 0, 0, 0) url(https://mybk.hcmut.edu.vn/bookstore/img/header-bg.jpg) no-repeat scroll center center;
        color: #fefefe;
        text-align: center;
        text-transform: capitalize;
    }

    .breadcrumbs {
        line-height: 0;
        padding: 140px 0;
    }

    .layer-4 {
        margin-top: 77px;
    }

    .layer-4 .title-4 input {
              border: medium none;
              border-bottom-left-radius: 30px;
              border-top-left-radius: 30px;
              color: #444444;
              height: 50px;
              line-height: 50px;
              padding-left: 20px;
              position: relative;
              width: 40%;
          }
</style>
<h2 class="my-4">Store</h2>

<div class="breadcrumbs-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="breadcrumbs">
                    <div class="layer-4">
                        <form asp-action="Index" class="col-5 my-1 p-2 mx-auto">
                            <div>
                                
                                <div class="my-1">
                                    <input type="text" name="searchString" placeholder="Title or Author" class="form-control-sm col-12" />
                                </div>
                                <div class="my-1">
                                    <input type="number" name="minPrice" step="1" placeholder="$min" class="form-control-sm col-5" />&nbsp;&#8212;&nbsp;<input type="number" name="maxPrice" step="1" placeholder="$max" class="form-control-sm col-5" />
                                </div>
                                <input type="submit" value="Filter" class="btn btn-primary btn-sm" />
                                <a asp-action="Index" class="btn btn-secondary btn-sm">Clear</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<div class="row">
    @foreach (var book in Model)
    {
        <div class="col-3">
            <div class="card my-2 store-card">
                <a class="a-cleanup" asp-controller="Store" asp-action="Details" asp-route-id="@book.Id">
                    <img src="@book.ImageUrl" class="card-img-top card-img-custom">
                    <div class="card-body" style="height: 6em;">
                        <h5 class="mb-3">@book.Title</h5>
                    </div>
                    <div class="card-body">
                        <span class="card-text">@book.Price.ToString("c")</span>
                        <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@book.Id" class="btn btn-primary float-right store-btn"><i class="fa-solid fa-cart-plus"></i></a>
                    </div>
                </a>
            </div>
        </div>
    }
</div>